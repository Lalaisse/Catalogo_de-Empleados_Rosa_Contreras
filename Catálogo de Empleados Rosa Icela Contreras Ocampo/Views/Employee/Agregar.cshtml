@model Catálogo_de_Empleados_Rosa_Icela_Contreras_Ocampo.Models.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}

<style>
    .row {
        margin-top: 2rem;
    }
</style>

<h2>Catálogo de empleados</h2>

<div class="row">
    <div class="col-12" style="text-align:right">
        <a class="btn btn-primary" data-toggle="modal" href="#modalAgregar">Agregar</a>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha de Creación </th>
                    <th>Nombre Completo</th>
                    <th>RFC</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Eliminado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.datos)
                {
                    <tr>
                        <div class="row d-flex justify-content-center">
                        <td class="text-center">@item.Id</td>

        </div>
        <div align="center">
            <td class="text-center">@item.CreationDate.Value.ToShortDateString()</td>
        </div>
        <div align="center">
            <td class="text-center">@item.Name @item.LastName </td>
        </div>
        <div align="center">
            <td class="text-center">@item.RFC</td>
        </div>
        <div align="center">
            <td class="text-center">@item.Email</td>
        </div>
        <div align="center">
            <td class="text-center">@item.PhoneNumber</td>
        </div>
        <td class="text-center">
            @if (item.IsDeleted == true)
            {
                <div align="center">
                    <img src="../../icons/checked_checkbox_50px.png" height="15" width="15" />
                </div>
            }
        </td>
        <td>
            <a href="~/rco_Contacto/Buscar/@item.Id" class="btn "><img src="../../icons/eye_50px.png" height="20" width="20" /></a>
            <a href="~/rco_Contacto/Editar/@item.Id" class="btn "><img src="../../icons/edit_row2_50px.png" height="20" width="20" /></a>
            <a href="~/rco_Contacto/BajaLogica/@item.Id" class="btn "><img src="../../icons/trash_50px.png" height="15" width="15" /></a>
        </td>
        </tr>
    }

                </tbody>
                </table>
            </div>
            </div>

            @* Modal para agregar nuevo empleado *@
            <div class="modal fade" id="modalAgregar" tabindex="-1" aria-labelledby="tituloModal" aria-hidden="true" style="display:none">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" href="~/Employee/ToIndex" class="close" data-bs-dismiss="modal" aria-hidden="true">x</button>
